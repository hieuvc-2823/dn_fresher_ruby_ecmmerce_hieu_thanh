<div class="container main-secction mb-5 mt-4">
  <div class="row">
    <div class="row user-left-part">
      <div class="col-md-3 col-sm-3 col-xs-12 user-profil-part pull-left">
        <div class="row ">
          <div class="col-md-12 col-md-12-sm-12 col-xs-12 user-image text-center">
            <%= image_tag(Settings.default_url, class: "rounded-circle" ) %>
          </div>
          <div class="col-md-12 col-sm-12 col-xs-12 user-detail-section1 text-center">
            <button id="btn-contact" (click)="clearModal()" data-toggle="modal" data-target="#contact"
              class="btn btn-success btn-block follow">
              <%= t("upload_avt") %>
            </button>
          </div>
          <div class="row user-detail-row mt-2">
            <ul class="menu-category">
              <li><a href="#">
                  <%= t("his_order") %>
                </a></li>
              <li><a href="#">
                  <%= t("change_pwd") %>
                </a></li>
            </ul>
          </div>

        </div>
      </div>
      <div class="col-md-9 col-sm-9 col-xs-12 pull-right profile-right-section">
        <div class="row profile-right-section-row">
          <div class="col-md-12 profile-header">
            <div class="row">
              <div class="col-md-8 col-sm-6 col-xs-6 profile-header-section1 pull-left">
                <h1>
                  <%= @user.name %>
                </h1>
              </div>

            </div>
          </div>
          <div class="col-md-12">
            <div class="row">
              <div class="col-md-8">
                <ul class="nav nav-tabs" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link active" href="#profile" role="tab" data-toggle="tab"><i
                        class="fas fa-user-circle"></i>
                      <%= t("your_profile")%>
                    </a>
                  </li>
                </ul>
                <div class="tab-content mt-4">
                  <div role="tabpanel" class="tab-pane fade show active" id="profile">
                    <%= form_for @user do |f| %>

                    <div class="row">
                      <div class="col-md-2">
                        <label><%= t("name")%></label>
                      </div>
                      <div class="col-md-6">
                        <p>
                          <%= f.text_field :name, class: "form-control" %>
                        </p>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-2">
                        <label><%= t("email") %></label>
                      </div>
                      <div class="col-md-6">
                        <p>
                          <%= f.text_field :email, class: "form-control" %>
                        </p>
                      </div>
                    </div>
                    <% end %>
                    <div class="row">
                      <div class="col-md-2">
                        <a href="/search" class="btn btn-primary"><%= t("save") %></a>
                      </div>
                    </div>
                  </div>

                </div>

              </div>
            </div>
            <div class="row mt-4">
              <div class="col-md-8">
                <ul class="nav nav-tabs" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link active" href="#profile" role="tab" data-toggle="tab"><i
                        class="fas fa-user-circle"></i>
                      <%= t("your_address")%>
                    </a>
                  </li>
                </ul>
                <div class="tab-content mt-4">
                    <div class="row">
                        <table>
                          <% @user.addresses.each do |add| %>
                            <tr>
                              <td>
                                <%= add.address_initial %>
                              </td>
                              <td>
                                <% if add.default == 1 %>
                                <span>
                                  <%= t("default_add")%>
                                </span>
                                <% end %>
                              </td>
                              <td>
                                <a href="#">
                                  <i class="fas fa-edit"></i>
                                </a>
                              </td>
                              <td>
                                <a href="#">
                                  <i class="fas fa-trash"></i>
                                </a>
                              </td>

                            </tr>
                          <% end %>
                        </table>

                    </div>


                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
